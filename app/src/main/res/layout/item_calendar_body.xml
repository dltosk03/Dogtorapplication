<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/test"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="26dp">

                <ImageView
                    android:layout_width="112dp"
                    android:layout_height="42dp"
                    android:paddingLeft="20dp"
                    android:src="@drawable/logo"></ImageView>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="180dp"
                    android:paddingRight="16dp"
                    android:src="@drawable/dog"></ImageView>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:paddingRight="20dp"
                    android:src="@drawable/my"></ImageView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/header"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/monthYearText"

                    style="?android:attr/textAppearanceMedium"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/medi"
                    android:gravity="left"
                    android:paddingLeft="20dp"
                    android:textSize="20dp"
                    tools:text="2023년 1월" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="19dp"
                android:paddingTop="10dp"
                android:paddingRight="19dp">

                <TextView

                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/edge_gray"
                    android:fontFamily="@font/light"
                    android:text="일"
                    android:textAlignment="center"
                    android:textColor="@color/day_gray"
                    android:textSize="12dp"
                    android:textStyle="bold"></TextView>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/edge_gray"
                    android:fontFamily="@font/light"
                    android:text="월"
                    android:textAlignment="center"
                    android:textColor="@color/day_gray"
                    android:textSize="12dp"
                    android:textStyle="bold"></TextView>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/edge_gray"
                    android:fontFamily="@font/light"
                    android:text="화"
                    android:textAlignment="center"
                    android:textColor="@color/day_gray"
                    android:textSize="12dp"
                    android:textStyle="bold"></TextView>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/edge_gray"
                    android:fontFamily="@font/light"
                    android:text="수"
                    android:textAlignment="center"
                    android:textColor="@color/day_gray"
                    android:textSize="12dp"
                    android:textStyle="bold"></TextView>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/edge_gray"
                    android:fontFamily="@font/light"
                    android:text="목"
                    android:textAlignment="center"
                    android:textColor="@color/day_gray"
                    android:textSize="12dp"
                    android:textStyle="bold"></TextView>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/edge_gray"
                    android:fontFamily="@font/light"
                    android:text="금"
                    android:textAlignment="center"
                    android:textColor="@color/day_gray"
                    android:textSize="12dp"
                    android:textStyle="bold"></TextView>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/edge_gray"
                    android:fontFamily="@font/light"
                    android:text="토"
                    android:textAlignment="center"
                    android:textColor="@color/day_gray"
                    android:textSize="12dp"
                    android:textStyle="bold"></TextView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/bold"
                    android:gravity="left"
                    android:includeFontPadding="false"
                    android:paddingLeft="20dp"
                    android:paddingTop="20dp"
                    android:text="Todo list"
                    android:textSize="18dp" />

                <ImageButton
                    android:id="@+id/listscroll"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginTop="18dp"
                    android:background="?selectableItemBackgroundBorderless"
                    android:padding="@dimen/mcv_arrow_padding"
                    app:srcCompat="@drawable/polygon" />
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:paddingLeft="19dp"
                android:paddingRight="19dp"></androidx.recyclerview.widget.RecyclerView>

            <LinearLayout
                android:id="@+id/todo_body_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.recyclerview.widget.RecyclerView
                    android:overScrollMode="never"
                    android:nestedScrollingEnabled="false"
                    android:id="@+id/recycleView2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:listitem="@layout/layout_todo" />
                <TextView
                    android:visibility="gone"
                    android:id="@+id/nolist"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="할일을 추가하세요"
                    android:paddingLeft="20dp"
                    android:fontFamily="@font/medi"></TextView>
                <!--<LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:paddingTop="15dp"
            android:paddingLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/rectangle">
        </ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fontFamily="@font/medi"
            android:gravity="left"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:text="산책 시키기"
            android:textSize="16dp" />
    </LinearLayout>-->
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:orientation="vertical"
                android:paddingRight="18dp">

                <ImageButton
                    android:id="@+id/plus_btn"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_gravity="right"
                    android:adjustViewBounds="true"
                    android:padding="0dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/plus"></ImageButton>
                <ImageButton
                    android:id="@+id/update_btn"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_gravity="right"
                    android:adjustViewBounds="true"
                    android:padding="0dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/plus"></ImageButton>

            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>